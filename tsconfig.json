{
  "compilerOptions": {
    "module": "commonjs",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "allowJs": true,
    "typeRoots": ["src/types", "node_modules/@types"],
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"],
  "ts-node": { "files": true }
}
